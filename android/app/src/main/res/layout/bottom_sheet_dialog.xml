<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints">

        <!--text view for displaying course tracks-->

        <!--text view for displaying course duration-->

        <!--button for dismissing our dialog-->

    </RelativeLayout>

    <Button
        android:id="@+id/idBtnDismiss"
        android:layout_width="348dp"
        android:layout_height="87dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="60dp"
        android:onClick="onPaymentBottomSheet"
        android:text="Оплата"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/idTVCourseTracks"
        android:layout_width="350dp"
        android:layout_height="15dp"
        android:text="Course Tracks : 30"
        android:textColor="#4341E4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/idTVCourseDuration"
        android:layout_width="356dp"
        android:layout_height="20dp"
        android:layout_marginBottom="156dp"
        android:contentDescription="Text test 1"
        android:text="Text test 1"
        android:textColor="#0B0B0B"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/idBtnDismiss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Text test 1" />

    <TextView
        android:id="@+id/idTVCourseName"
        android:layout_width="341dp"
        android:layout_height="23dp"
        android:text="DSA Self Paced Course"
        android:textColor="#8A1717"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/idTVCourseDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTVCourseTracks"
        app:layout_constraintVertical_bias="0.506" />

</androidx.constraintlayout.widget.ConstraintLayout>

